<%= form_tag search_path, method: :get do %>

	<div class="row">
		<div class="col-md-6">
			<%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= submit_tag "Search", class: "btn btn-primary" %>
		</div>
	</div>

<% end %>

<br>

<div class="text-center">
	<h2>Just for the weekend</h2>
	<p>Discover new and inspiring places close to home!</p>
</div>

<br>

<div class="row">
	<div class="col-md-4 col-sm-12">
		<div class="discovery-card" style="background-image: url('assets/Vancouver.jpg')">
			<div class="va-container">
				<div class="va-middle text-center">
					<h2><strong>Vancouver</strong></h2>
				</div>
			</div>
			
		</div>
	</div>
	<div class="col-md-4 col-sm-6">
		<div class="discovery-card" style="background-image: url('/assets/Denver.jpg')">
			<div class="va-container">
				<div class="va-middle text-center">
					<h2><strong>Denver</strong></h2>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4 col-sm-6">
		<div class="discovery-card" style="background-image: url('/assets/Amsterdam.jpg')">
			<div class="va-container">
				<div class="va-middle text-center">
					<h2><strong>Amsterdam</strong></h2>
				</div>
			</div>
		</div>
	</div>
</div>

<br>

<div class="text-center">
	<h2>Explore the world</h2>
	<p>See good time spots all over the world </p>
</div>

<div class="row">
	<% @rooms.each do |room| %>
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading preview">
					<%= image_tag room.show_first_photo(:medium) %>
				</div>
				<div class="panel-body">
					<%= link_to room.listing_name, room %>
				</div>
			</div>
		</div>
	<% end %>
</div>

<script>
	$(function() {
		$('#start_date').datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$('#end_date').datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);

			}
		});
	})

</script>